<h3>Available Trains</h3>
<% if @trains.any? %>
  <ul> <% @trains.each do |train| %>      
    <li> <a href="/trains/<%= train.id %>"><strong><%= train.name %></strong></a> </li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no Trains to display.</p>
<% end %>

<a href="/trains/new"><button class="btn-success">Add a new Train</button></a>

<form action="/trains" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Remove ALL Trains?</button>
</form>