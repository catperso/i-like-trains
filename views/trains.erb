<h3>Available Trains</h3>
<% if @trains.any? %>
  <ul> <% @trains.each do |train| %>      
    <li> <a href="/trains/<%= train.id %>"><strong><%= train.name %></strong></a> </li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no Trains to display.</p>
<% end %>

<a href="/trains/new">Add a new Train</a>