<h2>City: <%= @city.name %></h2>
<p>Trains in this City:</p>
<% if @city.trains.any? %>
    <ul>
      <% @city.trains.each do |train| %>
        <li><a href="/trains/<%= train.id %>"><%= train.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>This city has no scheduled trains.</p>
  <% end %>


<form action="/cities/<%= @city.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename City</label>
  <input id="name" name="name" type="text" required>
  

  <button type="submit">Update City</button>
</form>

<form action="/cities/<%= @city.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete City</button>
</form>

<a href="/cities">Back to all cities</a>